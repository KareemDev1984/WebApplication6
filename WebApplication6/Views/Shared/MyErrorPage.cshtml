@model System.Web.Mvc.HandleErrorInfo
    <h2>MyErrorPage</h2>

    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Error Page</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <p>
            <h1>
                This is coming from my own error page.
            </h1>
        </p>
        <p>
            <h2>@Html.DisplayFor(e => e.ControllerName)</h2>
            <h2>@Html.DisplayFor(e => e.ActionName)</h2>
            <h2>@Html.DisplayFor(e => e.Exception.Message)</h2>
        </p>
    </body>
</html>